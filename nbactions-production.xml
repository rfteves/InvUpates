<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
                <jpda.listen>maven</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-BuildProfit</actionName>
            <displayName>BuildProfit</displayName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
            <activatedProfiles>
                <activatedProfile>buildprofit</activatedProfile>
            </activatedProfiles>
        </action>
    </actions>
